<?xml version="1.0" encoding="utf-8"?>
<stavetest.meetstudio.com.stavetest.TrainingView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:id="@+id/layout_stave"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="150dp">
        </WebView>

        <View
            android:id="@+id/cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#77777777"/>
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_below="@id/layout_stave"
        android:id="@+id/control_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:padding="10dp">

        <Button
            android:id="@+id/standard_instrument"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/selector_instrument"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/standard_voice"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/standard_instrument"
            android:background="@drawable/selector_voice"
            android:layout_marginLeft="10dp" />

        <Button
            android:id="@+id/standard_stop_and_score"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/selector_score"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/record"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/selector_record"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

</stavetest.meetstudio.com.stavetest.TrainingView>